<%# app/views/video_audits/show.html.erb %>

<div class="analysis-app-container">
  <!-- Header -->
  <header class="analysis-header">
    <div class="header-left">
      <a href="/" class="back-link">&larr; Back</a>
      <span class="workflow-title">
        <% short_title = @audit.llm_response.dig('workflowSummary', 'workflowtitle') %>
        <% if short_title.present? %>
          <%= short_title %>
        <% else %>
          <%= truncate(@audit.llm_response.dig('workflowSummary', 'userGoal').to_s, length: 40) %>
        <% end %>
      </span>
    </div>
  </header>

  <div class="analysis-body">
    <!-- Sidebar Timeline -->
    <aside class="flow-timeline">
      <h4>Flow Timeline</h4>
      <ul class="timeline-steps">
        <li class="timeline-step all-steps selected" onclick="highlightCard('all')">All Steps</li>
        <% if @audit.llm_response["identifiedIssues"].is_a?(Array) %>
          <% @audit.llm_response["identifiedIssues"].each_with_index do |issue, idx| %>
            <li class="timeline-step" onclick="highlightCard(<%= idx %>)">
              <span class="step-title"><%= issue["painPointTitle"] %></span>
              <% if issue["frameReference"] %>
                <span class="step-time"><%= frame_range_to_time(issue["frameReference"]) %></span>
              <% end %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </aside>

    <!-- Main Content Area -->
    <main class="analysis-main">
      <% if @audit.llm_response.dig('workflowSummary') %>
        <div class="main-summary-card full-width">
          <h3>User Goal</h3>
          <p><%= @audit.llm_response['workflowSummary']['userGoal'] %></p>
          <% if @audit.llm_response['workflowSummary']['workflowSteps'].is_a?(Array) %>
            <h4>Workflow Steps</h4>
            <ol class="workflow-steps-list">
              <% @audit.llm_response['workflowSummary']['workflowSteps'].each do |step| %>
                <% clean_step = step.gsub(/^\d+\.\s*/, '') %>
                <li><%= clean_step %></li>
              <% end %>
            </ol>
          <% end %>
        </div>
      <% end %>
      <div class="tab-content overview-tab active">
        <% if @audit.completed? || @audit.status == 'partial' %>
          <% if @audit.llm_response.is_a?(Hash) && @audit.llm_response["identifiedIssues"].is_a?(Array) %>
            <div class="issue-card-grid">
              <% @audit.llm_response["identifiedIssues"].each_with_index do |issue, idx| %>
                <div class="issue-card" id="issue-card-<%= idx %>">
                  <% if issue["frameReference"] %>
                    <div class="issue-timestamp">
                      <span class="timestamp-label">Time:</span>
                      <span class="timestamp-value"><%= frame_range_to_time(issue["frameReference"]) %></span>
                    </div>
                  <% end %>
                  <div class="issue-card-header">
                    <span class="issue-severity <%= issue["severity"].downcase %>">
                      <%= issue["severity"].capitalize %>
                    </span>
                    <span class="issue-title"><%= issue["painPointTitle"] %></span>
                  </div>
                  <div class="issue-description">
                    <%= issue["issueDescription"] %>
                  </div>
                  <div class="issue-recommendations">
                    <strong>Recommendations:</strong>
                    <ul>
                      <% issue["recommendations"].each do |rec| %>
                        <li><%= rec %></li>
                      <% end %>
                    </ul>
                  </div>
                  <div class="issue-card-actions">
                    <button class="copy-btn" onclick="copyIssue(<%= @audit.id %>, <%= idx %>)">Copy</button>
                    <button class="jira-btn">Jira</button>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="error-message">
              Invalid analysis format. Please try again.
            </div>
          <% end %>
        <% elsif @audit.failed? %>
          <div class="error-box">
            <% if @audit.llm_response.is_a?(Hash) && @audit.llm_response["error"] %>
              <%= @audit.llm_response["error"] %>
            <% else %>
              <%= @audit.llm_response %>
            <% end %>
          </div>
        <% else %>
          <div class="processing">
            <div class="spinner"></div>
            <p>Processing video analysis...</p>
          </div>
        <% end %>
      </div>
    </main>
  </div>
</div>

