<% content_for :title, "Search UX Knowledge" %>

<% if user_signed_in? %>
  <!-- Logged-in User View (App Context) -->
  <div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Search Knowledge Base</h1>
            <p class="mt-2 text-gray-600">Find UX principles and guidelines</p>
          </div>
          <%= link_to ux_knowledge_documents_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 font-medium transition" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Knowledge Base
          <% end %>
        </div>
      </div>

      <!-- Search Form -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
        <%= form_with url: search_ux_knowledge_documents_path, method: :get, local: true, class: "flex gap-3" do |form| %>
          <div class="flex-1">
            <%= form.text_field :query,
                                value: @query,
                                placeholder: "Search for UX principles, heuristics, or guidelines...",
                                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
          </div>
          <%= form.submit "Search", class: "px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 font-semibold shadow-sm transition cursor-pointer" %>
        <% end %>
      </div>

      <!-- Search Results -->
      <% if @query.present? %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <div class="flex items-center justify-between">
              <div>
                <h2 class="text-lg font-semibold text-gray-900">Search Results for "<%= @query %>"</h2>
                <p class="text-sm text-gray-600 mt-1"><%= @results.count %> <%= 'result'.pluralize(@results.count) %> found</p>
              </div>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-700">
                <%= @results.count %>
              </span>
            </div>
          </div>

          <div class="divide-y divide-gray-200">
            <% if @results.any? %>
              <% @results.each do |result| %>
                <div class="p-6 hover:bg-gray-50 transition">
                  <div class="flex items-start justify-between mb-3">
                    <div class="flex-1">
                      <div class="flex items-center space-x-2 mb-2">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-purple-100 text-purple-800">
                          <%= result.file_name.gsub('.pdf', '').gsub('_', ' ').titleize %>
                        </span>
                        <span class="text-xs text-gray-500">Chunk #<%= result.chunk_index %></span>
                      </div>
                      <p class="text-gray-700 text-sm leading-relaxed whitespace-pre-wrap"><%= result.content.truncate(500) %></p>
                    </div>
                    <%= link_to result, class: "ml-4 inline-flex items-center px-3 py-1.5 border border-purple-600 text-purple-600 rounded-lg hover:bg-purple-50 text-sm font-medium transition flex-shrink-0" do %>
                      View Full
                    <% end %>
                  </div>
                </div>
              <% end %>

              <!-- Formatted Context (Admin Debug) -->
              <% if @formatted_context.present? %>
                <div class="p-6 bg-green-50 border-t-2 border-green-200">
                  <div class="flex items-start space-x-3">
                    <div class="bg-green-100 rounded-lg p-2 flex-shrink-0">
                      <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h3 class="text-sm font-semibold text-green-900 mb-2">ðŸ“š AI Context Preview</h3>
                      <p class="text-xs text-green-700 mb-3">This is how the knowledge context is formatted for AI analysis:</p>
                      <div class="bg-white rounded-lg p-4 border border-green-200">
                        <pre class="text-xs text-gray-700 overflow-x-auto"><%= @formatted_context.truncate(1000) %></pre>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="p-12 text-center">
                <div class="bg-gray-100 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
                  <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">No Results Found</h3>
                <p class="text-gray-600 mb-4">Try searching with different keywords or browse suggested topics below.</p>
                <div class="flex justify-center flex-wrap gap-2 mt-4">
                  <%= link_to "Nielsen heuristics", search_ux_knowledge_documents_path(query: "Nielsen heuristics"), class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 text-sm font-medium transition" %>
                  <%= link_to "Accessibility", search_ux_knowledge_documents_path(query: "accessibility guidelines"), class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 text-sm font-medium transition" %>
                  <%= link_to "Design systems", search_ux_knowledge_documents_path(query: "design systems"), class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 text-sm font-medium transition" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <!-- Empty State -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
          <div class="bg-purple-100 rounded-full w-20 h-20 mx-auto mb-6 flex items-center justify-center">
            <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Search the UX Knowledge Base</h3>
          <p class="text-gray-600 mb-6 max-w-md mx-auto">Enter search terms to find relevant UX principles and guidelines from industry experts.</p>
          <div>
            <p class="text-sm font-semibold text-gray-700 mb-3">Popular Topics:</p>
            <div class="flex justify-center flex-wrap gap-2">
              <%= link_to search_ux_knowledge_documents_path(query: "Nielsen heuristics"), class: "px-4 py-2 bg-purple-100 text-purple-700 rounded-lg hover:bg-purple-200 text-sm font-medium transition" do %>
                Nielsen Heuristics
              <% end %>
              <%= link_to search_ux_knowledge_documents_path(query: "accessibility guidelines"), class: "px-4 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 text-sm font-medium transition" do %>
                Accessibility
              <% end %>
              <%= link_to search_ux_knowledge_documents_path(query: "design systems"), class: "px-4 py-2 bg-green-100 text-green-700 rounded-lg hover:bg-green-200 text-sm font-medium transition" do %>
                Design Systems
              <% end %>
              <%= link_to search_ux_knowledge_documents_path(query: "AI interface design"), class: "px-4 py-2 bg-orange-100 text-orange-700 rounded-lg hover:bg-orange-200 text-sm font-medium transition" do %>
                AI Interface Design
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

<% else %>
  <!-- Non-logged-in User View (Marketing Context) -->
  <div class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-blue-50 py-12">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-8">
        <div class="inline-flex items-center px-4 py-2 bg-purple-100 text-purple-700 rounded-full text-sm font-medium mb-4">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          Free Knowledge Search
        </div>
        <h1 class="text-4xl font-extrabold text-gray-900 mb-3">Search UX Knowledge</h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">Discover expert UX principles and best practices</p>
      </div>

      <!-- Search Form -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-8 mb-8">
        <%= form_with url: search_ux_knowledge_documents_path, method: :get, local: true do |form| %>
          <div class="flex flex-col md:flex-row gap-4">
            <div class="flex-1">
              <%= form.text_field :query,
                                  value: @query,
                                  placeholder: "Search for UX principles, heuristics, or guidelines...",
                                  class: "w-full px-5 py-4 border-2 border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent text-lg" %>
            </div>
            <%= form.submit "Search", class: "px-8 py-4 bg-purple-600 text-white rounded-xl hover:bg-purple-700 font-bold shadow-md transition cursor-pointer" %>
          </div>
        <% end %>

        <%= link_to ux_knowledge_documents_path, class: "inline-flex items-center text-purple-600 hover:text-purple-700 font-medium mt-4 text-sm" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Knowledge Base
        <% end %>
      </div>

      <!-- Search Results -->
      <% if @query.present? %>
        <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden">
          <div class="bg-gradient-to-r from-purple-600 to-blue-600 px-8 py-6 text-white">
            <h2 class="text-2xl font-bold mb-1">Results for "<%= @query %>"</h2>
            <p class="text-purple-100"><%= @results.count %> <%= 'match'.pluralize(@results.count) %> found</p>
          </div>

          <% if @results.any? %>
            <div class="divide-y divide-gray-200">
              <% @results.each do |result| %>
                <div class="p-8 hover:bg-gray-50 transition">
                  <div class="mb-3">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-purple-100 text-purple-800">
                      <%= result.file_name.gsub('.pdf', '').gsub('_', ' ').titleize %>
                    </span>
                  </div>
                  <p class="text-gray-700 leading-relaxed whitespace-pre-wrap mb-4"><%= result.content.truncate(500) %></p>
                  <%= link_to result, class: "inline-flex items-center text-purple-600 hover:text-purple-700 font-semibold text-sm" do %>
                    Read more
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                  <% end %>
                </div>
              <% end %>
            </div>

            <!-- CTA Section -->
            <div class="bg-gradient-to-r from-purple-600 to-blue-600 p-8 text-center text-white">
              <h3 class="text-xl font-bold mb-3">Want AI-powered UX audits using this knowledge?</h3>
              <p class="text-purple-100 mb-4">Sign up free to analyze your designs with expert UX principles</p>
              <% if respond_to?(:new_user_registration_path) %>
                <%= link_to new_user_registration_path, class: "inline-flex items-center px-6 py-3 bg-white text-purple-600 rounded-lg hover:bg-gray-100 font-bold shadow-lg transition" do %>
                  Get Started Free
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                  </svg>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <div class="p-12 text-center">
              <div class="bg-gray-100 rounded-full w-20 h-20 mx-auto mb-4 flex items-center justify-center">
                <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">No Results Found</h3>
              <p class="text-gray-600 mb-6">Try different keywords or explore these popular topics:</p>
              <div class="flex justify-center flex-wrap gap-3">
                <%= link_to "Nielsen heuristics", search_ux_knowledge_documents_path(query: "Nielsen heuristics"), class: "px-5 py-2.5 bg-purple-100 text-purple-700 rounded-lg hover:bg-purple-200 font-medium transition" %>
                <%= link_to "Accessibility", search_ux_knowledge_documents_path(query: "accessibility guidelines"), class: "px-5 py-2.5 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 font-medium transition" %>
                <%= link_to "Design systems", search_ux_knowledge_documents_path(query: "design systems"), class: "px-5 py-2.5 bg-green-100 text-green-700 rounded-lg hover:bg-green-200 font-medium transition" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <!-- Empty State with Suggestions -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-12 text-center">
          <div class="bg-purple-100 rounded-full w-24 h-24 mx-auto mb-6 flex items-center justify-center">
            <svg class="w-12 h-12 text-purple-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Explore UX Knowledge</h3>
          <p class="text-gray-600 mb-8 max-w-md mx-auto">Start searching to discover expert insights on UX design, accessibility, and best practices.</p>

          <div class="mb-8">
            <p class="text-sm font-bold text-gray-700 mb-4 uppercase tracking-wide">Popular Topics</p>
            <div class="flex justify-center flex-wrap gap-3">
              <%= link_to search_ux_knowledge_documents_path(query: "Nielsen heuristics"), class: "px-6 py-3 bg-purple-100 text-purple-700 rounded-xl hover:bg-purple-200 font-semibold transition shadow-sm" do %>
                ðŸ“Š Nielsen Heuristics
              <% end %>
              <%= link_to search_ux_knowledge_documents_path(query: "accessibility guidelines"), class: "px-6 py-3 bg-blue-100 text-blue-700 rounded-xl hover:bg-blue-200 font-semibold transition shadow-sm" do %>
                â™¿ Accessibility
              <% end %>
              <%= link_to search_ux_knowledge_documents_path(query: "design systems"), class: "px-6 py-3 bg-green-100 text-green-700 rounded-xl hover:bg-green-200 font-semibold transition shadow-sm" do %>
                ðŸŽ¨ Design Systems
              <% end %>
              <%= link_to search_ux_knowledge_documents_path(query: "AI interface design"), class: "px-6 py-3 bg-orange-100 text-orange-700 rounded-xl hover:bg-orange-200 font-semibold transition shadow-sm" do %>
                ðŸ¤– AI Interfaces
              <% end %>
            </div>
          </div>

          <% if respond_to?(:new_user_registration_path) %>
            <div class="border-t border-gray-200 pt-8">
              <p class="text-gray-600 mb-4">Ready to audit your UX with AI?</p>
              <%= link_to new_user_registration_path, class: "inline-flex items-center px-8 py-4 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-xl hover:from-purple-700 hover:to-blue-700 font-bold shadow-lg transition" do %>
                Start Free Trial
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
