<script>
// Highlight feedback card when timeline step is clicked
function highlightCard(idx) {
  const cards = document.querySelectorAll('.issue-card');
  cards.forEach((card, i) => {
    card.classList.remove('highlighted');
    if (idx === 'all' || idx === undefined) {
      card.style.display = '';
    } else if (i === idx) {
      card.classList.add('highlighted');
      card.scrollIntoView({ behavior: 'smooth', block: 'center' });
      card.style.display = '';
    } else {
      card.style.display = 'none';
    }
  });
}

// Update timeline step selection
document.addEventListener('DOMContentLoaded', function() {
  const timelineSteps = document.querySelectorAll('.timeline-step');
  timelineSteps.forEach((step, idx) => {
    step.addEventListener('click', function() {
      timelineSteps.forEach(s => s.classList.remove('selected'));
      this.classList.add('selected');

      if (this.classList.contains('all-steps')) {
        highlightCard('all');
      } else {
        const adjustedIdx = Array.from(timelineSteps).indexOf(this) - 1; // Subtract 1 for "All Steps"
        highlightCard(adjustedIdx);
      }
    });
  });
});
</script> 