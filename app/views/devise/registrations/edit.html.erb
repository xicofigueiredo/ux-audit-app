<div class="container mx-auto px-4 py-12 max-w-md">
  <div class="bg-white rounded-lg shadow-lg p-8">
    <h2 class="text-3xl font-bold text-gray-800 mb-6">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4 p-3 bg-yellow-50 border border-yellow-300 text-yellow-800 rounded-lg text-sm">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <span class="text-xs text-gray-500">(leave blank if you don't want to change it)</span>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
        <% if @minimum_password_length %>
          <span class="text-xs text-gray-500 mt-1 block"><%= @minimum_password_length %> characters minimum</span>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div class="mb-6">
        <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <span class="text-xs text-gray-500">(we need your current password to confirm your changes)</span>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <div class="mb-6">
        <%= f.submit "Update", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-4 rounded-lg shadow transition cursor-pointer" %>
      </div>
    <% end %>

    <div class="border-t border-gray-200 pt-6 mt-6">
      <h3 class="text-xl font-bold text-gray-800 mb-4">Cancel my account</h3>
      <p class="text-sm text-gray-600 mb-4">Unhappy with the service?</p>
      <%= button_to "Cancel my account", registration_path(resource_name),
          data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
          method: :delete,
          class: "w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-4 rounded-lg shadow transition cursor-pointer mb-4" %>
    </div>

    <div class="text-center mt-4">
      <%= link_to "Back", :back, class: "text-purple-600 hover:text-purple-700 font-medium" %>
    </div>
  </div>
</div>
