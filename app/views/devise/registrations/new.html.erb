<div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-8">
  <div class="text-center mb-8">
    <img src="/logo.svg" alt="UX Audit App" class="w-16 h-16 rounded-xl mx-auto mb-4">
    <h2 class="text-2xl font-bold text-gray-800">Create your UX Audit App account</h2>
    <p class="text-gray-600 mt-2">Join thousands of designers improving their UX</p>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, class: "space-y-6") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" do %>
        Password
        <% if @minimum_password_length %>
          <span class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
    </div>

    <div>
      <%= f.submit "Create account", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-4 rounded-lg shadow transition duration-200" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
