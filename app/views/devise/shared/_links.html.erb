<%- if controller_name != 'sessions' %>
  <div class="mb-2">
    <%= link_to "Log in", new_session_path(resource_name), class: "text-purple-600 hover:text-purple-700 font-medium" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mb-2">
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-purple-600 hover:text-purple-700 font-medium" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mb-2">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-purple-600 hover:text-purple-700 font-medium" %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="mb-2">
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-purple-600 hover:text-purple-700 font-medium" %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="mb-2">
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-purple-600 hover:text-purple-700 font-medium" %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="mb-2">
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full bg-white hover:bg-gray-50 border border-gray-300 text-gray-700 font-semibold py-2 px-4 rounded-lg shadow transition cursor-pointer" %>
    </div>
  <% end %>
<% end %>
